{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./build",
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*",
      ]
    },
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./.eslintrc.js",
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
